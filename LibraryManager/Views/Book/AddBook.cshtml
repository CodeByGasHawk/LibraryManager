@model Book;
<style type="text/css">
    form{margin-right:35%;margin-top:2%}
    #lcl{text-align:left}
    #rcl{text-align:right;color:red;font-size:medium}
    #btn{width:80px}
    #msg{margin:1px}
</style>
<span id="msg">
    @ViewBag.AddBookMessage
</span>
<form asp-action="AddBook" method="post">
    <table>
        <tr>
            <td id="lcl">
                <label >عنوان کتاب : </label>
            </td>
            <td>
                <input asp-for="Title"/>
            </td>
            <td id="rcl">
                <span asp-validation-for="Title"></span>
            </td>
        </tr>
        <tr>
            <td id="lcl">
                <label>نویسنده : </label>
            </td>
            <td>
                <input asp-for="Author"/>
            </td>
            <td id="rcl">
                <span asp-validation-for="Author"></span>
            </td>
        </tr>
        <tr>
            <td id="lcl">
                <label>شابک : </label>
            </td>
            <td>
                <input asp-for="ISBN"/>
            </td>
            <td id="rcl">
                <span asp-validation-for="ISBN"></span>
            </td>
        </tr>
        <tr>
            <td id="lcl" colspan="2">
                <button id="btn" type="submit" class="btn btn-sm btn-success">افزودن</button>
                <input id="btn" class="btn btn-dark btn-sm" type="button"  value="منوی اصلی" onclick="location.href='@Url.Action("index", "Library")'" />
            </td>

        </tr>
        <tr>
            <td colspan="2" style="text-align:left">                
                <input id="btn" class="btn btn-sm btn-danger"  type="button" value="لیست کتاب ها" onclick="location.href='@Url.Action("PrintBooks", "Book")'" />
                <input id="btn" class="btn btn-primary btn-sm" type="button" value="لیست اعضا" onclick="location.href='@Url.Action("PrintMembers", "Member")'" />
            </td>
        </tr>
    </table>        
</form>
